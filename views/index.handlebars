<div class="container">
  
    <div class='row'>
        <div class='center col-md-12'>
            <img src="assets/images/burger.jpg" id='burger_pic' alt="burger" class="img-thumbnail">
        </div>
    </div>
  
    <div class='row'>
        <div class='page-header col-md-12'>
            <h1>Eat-Da-Burger!</h1> 
        </div>
    </div>

    <div class='row'>
        <div class='col-md-6'>
            <h2>Burgers yet to be devoured: </h2> 
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                        {{id}}. {{burger_name}}
                        <button class='devour btn btn-danger' data-id="{{id}}" data-newdevour={{true}}>
                            Devour it!
                        </button>

                    </li>
                    {{/unless}}
                   
                {{/each}}
            </ul>
        
        </div>

        <div class='col-md-6'>
            <h2>Devoured burgers: </h2>
            <ul>
                {{#each burgers}}

                {{#if devoured}}
                    <li>
                        {{id}}. {{burger_name}}
                    </li>
                {{/if}}
                
                {{/each}}
            </ul>
        
        
        </div>
    </div>
<div class='row'>
    <div class='col-md-12'>
        <form class="create-form">
            <h2>Enter a burger you want to eat and click the 'Add Burger' button
            </h2>
            <div class="form-group">
                <label for="bu">Burger Name:</label>
                <input type="text" id="bu" name="name">
            </div>

            <button type="submit" class='btn btn-success'>Add Burger</button>

        </form>
  
    </div>
</div>

</div>